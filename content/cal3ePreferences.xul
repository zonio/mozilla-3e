<?xml-stylesheet type="text/css"
                 href="chrome://calendar3e/skin/cal3eGlobal.css"?>
<!DOCTYPE dialog [
  <!ENTITY % cal3ePreferencesDTD SYSTEM "chrome://calendar3e/locale/cal3ePreferences.dtd">
  %cal3ePreferencesDTD;
]>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  id="cal3e-preferences"
  title="&cal3ePreferences.title;"
  button="accept,cancel"
  onload="Calendar3e.Preferences.onLoad()"
  onunload="Calendar3e.Preferences.onUnload()"
  ondialogaccept="return Calendar3e.Preferences.onAccept()">

  <script type="application/x-javascript"
          src="chrome://calendar3e/content/cal3ePreferences.js"/>

  <stringbundle id="cal3e-bundlePreferences"
      src="chrome://calendar3e/locale/cal3ePreferences.properties"/>

  <hbox flex="1">
    <vbox style="width: 300px">

      <label value="&cal3eEnabledAccounts.label;"/>
      <tree flex="1" id="cal3e-accounts-tree" rows="4"
            seltype="single" hidecolumnpicker="true"> 
        <treecols>
          <treecol id="cal3e-accounts-tree-col-name" primary="true" flex="3"/>
          <treecol id="cal3e-accounts-tree-col-enable" flex="1"/>
        </treecols>
        <treechildren id="cal3e-accounts-tree-children"/>
      </tree>

    </vbox>
  </hbox>

</dialog>
