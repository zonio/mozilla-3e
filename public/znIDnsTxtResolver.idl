#include "nsISupports.idl"

interface nsIVariant;

/**
 * Simple resolver of DNS TXT recods.
 */
[scriptable, uuid(2f0564e9-8143-4c4d-acae-dc7227d27472)]
interface znIDnsTxtResolver: nsISupports {

    /**
     * Retrieves TXT records for given domain.
     *
     * @param domain name of the domain whose TXT records will be returned
     * @param count number of records retrieved
     * @return TXT records
     */
    void resolve(in AString domain, out unsigned long count, [retval, array, size_is(count)] out nsIVariant result);

};
