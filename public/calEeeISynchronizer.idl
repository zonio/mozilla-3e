#include "nsISupports.idl"

interface calEeeIClient;

/**
 * Synchronizer of calendars present in Mozilla client application
 * (i.e. Lightning) with those on EEE server.
 */
[scriptable, uuid(17646dc9-178b-4a49-8201-d07167165331)]
interface calEeeISynchronizer: nsISupports {

    /**
     * Synchronizes calendars of client's identity with those on EEE
     * server.
     *
     * Calendars removed on server are deleted, new calendars on
     * server are added and properties of already loaded are taken
     * from values on server as well.
     *
     * @param client EEE client used to retrieve calendars
     */
    calEeeISynchronizer synchronize(in calEeeIClient client);

};
