#include "nsISupports.idl"

interface calEeeIClient;

/**
 * Service running calendar synchronization on given accounts.
 */
[scriptable, uuid(3dc59b3e-5608-4415-9634-5cc9c91f2838)]
interface calEeeISynchronizationService: nsISupports {

  /**
   * Registers synchronizer to run {@link synchronizeAccounts}
   * periodically.
   *
   * @return receiver
   */
  calEeeISynchronizerService register();

  /**
   * Adds messaging account to list of accounts to synchronize.
   *
   * @param account messaging account to add
   * @return receiver
   */
  calEeeISynchronizerService addAccount(in nsIMsgAccount account);

  /**
   * Removes messaging account from list of accounts to synchronize.
   *
   * @param account messaging account to remove
   * @return receiver
   */
  calEeeISynchronizerService removeAccount(in nsIMsgAccount account);

  /**
   * Synchronizes all added account with EEE server.
   *
   * @return receiver
   */
  calEeeISynchronizerService synchronizeAccounts();

};

/**
 * Synchronizer of calendars present in Mozilla client application
 * (i.e. Lightning) with those on EEE server.
 */
[scriptable, uuid(17646dc9-178b-4a49-8201-d07167165331)]
interface calEeeISynchronizer: nsISupports {

    /**
     * EEE client which synchronization runs on.
     */
    attribute calEeeIClient client;

    /**
     * Synchronizes calendars of client's identity with those on EEE
     * server.
     *
     * Calendars removed on server are deleted, new calendars on
     * server are added and properties of already loaded are taken
     * from values on server as well.
     *
     * @return receiver
     */
    calEeeISynchronizer synchronize();

};
